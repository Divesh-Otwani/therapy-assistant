<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.exercise.Exercises">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_linear_layout"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/exercises_toolbar"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/exerciselog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_linear_layout"
        android:padding="15dp"
        android:fontFamily="@font/liberationserif"
        android:text="Completed Exercises"
        android:textSize="20sp"
        android:textStyle="bold" />


        <ListView
            android:id="@+id/recent_list"
            android:layout_below="@+id/exerciselog"
            android:layout_width="match_parent"
            android:layout_height="148dp"></ListView>




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/exercises_fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:tint="@android:color/black"
        android:src="@drawable/add"

        android:clickable="true"
     />

</RelativeLayout>